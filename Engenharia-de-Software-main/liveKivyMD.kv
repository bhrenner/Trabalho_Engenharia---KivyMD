Screen:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Conta'
            left_action_items: [['arrow-left-top', lambda x: app.callback(x)]]
        TelaConta:


<SenhaCard>:
    orientation: 'vertical'
    id: card
    size_hint: .7, .55
    pos_hint: {'center_x': .5, 'center_y': .5}

    MDBoxLayout:
        size_hint_y: .2
        padding: [40, 10, 10, 10]
        md_bg_color: app.theme_cls.primary_color
        
        MDLabel:
            text: 'Alterar Senha'
            #pos_hint:{'center_y': .5}
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: 'close'
            #pos_hint:{'center_y': .5}
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            on_release: root.fechar()

    
    MDFloatLayout:
        MDTextField:
            pos_hint: {'center_x': .5, 'center_y': .85} 
            size_hint_x: .8
            hint_text: 'Senha antiga'

        MDTextField: 
            pos_hint: {'center_x': .5, 'center_y': .65} 
            size_hint_x: .8
            hint_text: 'Nova senha'

        MDTextField: 
            pos_hint: {'center_x': .5, 'center_y': .45} 
            size_hint_x: .8
            hint_text: 'Confirmar senha'
        
        MDRaisedButton:
            pos_hint: {'center_x': .5, 'center_y': .2} 
            size_hint_x: .5
            text: 'Confirmar'

